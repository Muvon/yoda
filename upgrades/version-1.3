#!/usr/bin/env bash
# shellcheck source=../lib/migration.sh
source "$YODA_PATH/lib/migration.sh"

update_yodarc
mkdir -p "$DOCKER_ROOT/.ssh/connections"
grep '^.ssh$' "$DOCKER_ROOT/.gitignore" || echo '.ssh' >> "$_"
grep '^.ssh$' "$DOCKER_ROOT/.dockerignore" || echo '.ssh' >> "$_"
sed 's/{{driver}}/host/g' "$YODA_PATH/templates/compose.yml" > "$DOCKER_ROOT/containers/production.yml"
sed 's/{{driver}}/bridge/g' "$YODA_PATH/templates/compose.yml" > "$DOCKER_ROOT/containers/dev.yml"
